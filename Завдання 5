]


2

require 'json'

file = File.read('users.json')
users = JSON.parse(file)

total_age = 0

users.each do |user|
  puts "Name: #{user['name']}, Age: #{user['age']}"
  total_age += user['age']
end

average_age = total_age.to_f / users.size
puts "\nAverage Age: #{average_age.round(2)}"
